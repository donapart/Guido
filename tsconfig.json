{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "outDir": "out",
    "lib": ["ES2022", "DOM", "DOM.Iterable", "WebWorker"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "types": ["node", "vscode", "dom-speech-recognition"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "out"]
}
